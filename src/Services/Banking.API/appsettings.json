{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BankingDatabase": "Data Source=BankingDatabase.db;"
  },
  "Identity": {
    "Authority": "http://localhost:5000",
    "ClientId": "bankingapiclient",
    "RequireHttpsMetadata": true,
    "SignInScheme": "Cookies",
    "SaveTokens": true,
    "ResponseType": "id_token token",
    "Swagger": {
      "Flow": "clientCredentials",
      "Scopes": {
        "bankingapi": "bankingapi"
      }
    }
  }
}
